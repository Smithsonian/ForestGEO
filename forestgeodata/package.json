{
  "name": "forestgeodata",
  "version": "1.0.0",
  "description": "ForestGEO data validation for ForestGEO",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "install-devdeps": "npm i -D typescript typedoc ts-node ts-jest source-map-support @types/node jest @types/jest",
    "install-tools": "npm i -g del-cli npm-install-peers npm-check-updates @jsdevtools/version-bump-prompt http-server",
    "install-all": "npm run install-devdeps && npm run install-tools",
    "update": "ncu -u && npm i && npm-install-peers",
    "pub": "npm t && bump patch && npm run update && npm run build && npm publish",
    "test": "jest",
    "build": "del-cli dist && tsc",
    "doc": "del-cli doc && typedoc --entryPointStrategy expand ./src/ --out doc --exclude **/*.spec.ts",
    "sdoc": "npm run doc && http-server -o doc"
  },
  "keywords": [
    "forest",
    "science"
  ],
  "author": "ForestGEO developers",
  "license": "MIT",
  "homepage": "https://github.com/ForestGeoHack/ForestGEO",
  "bugs": {
    "url": "https://github.com/ForestGeoHack/ForestGEO/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ForestGeoHack/ForestGEO.git"
  },
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "del-cli": "^5.0.0",
    "http-server": "^14.1.1",
    "jest": "^27.4.4",
    "npm-check-updates": "^16.6.0",
    "npm-install-peers": "^1.2.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.3"
  }
}
